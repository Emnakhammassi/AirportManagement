@model AM.Applactioncore.Domaine.Flight

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.planeFK)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.planeFK)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EffectiveArrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EffectiveArrival)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstimationDuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstimationDuration)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot)
        </dt>
        <dd class="col-sm-10">
            @if (Model != null && !string.IsNullOrEmpty(Model.Pilot))
            {
                <img src="~/uploads/@Model.Pilot" width="100" height="100" class="img-thumbnail" alt="Image du pilote" />
            }
            else
            {
                <span class="text-muted">Aucune image disponible</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FlightId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>